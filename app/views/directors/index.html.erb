<div class="container">
  <div class="page-header">
    <h1>Directors</h1>
  </div>
  <p>
    <a href = "http://localhost:3000/directors/new_form" class = "btn btn-primary">Add a New Director</a>
  </p>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Dob</th>
        <th>Name</th>
        <th>Bio</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @list_of_directors.each do |director| %>
    <tbody>
      <tr>
        <td>
          <img src="<%= director.image_url %>" width="80">
        </td>
        <td>
          <%= director.dob %>
        </td>
        <td>
          <%= director.name %>
        </td>
        <td >
          <%= if director.bio.length < 30
            director.bio
          else
            (director.bio[0..26]+"...")
            end %>
          </td>
          <td>
            <a href="http://localhost:3000/directors/<%= director.id %>" class = "btn btn-primary">
              <i class = "fa fa-search-plus"></i>
            </a>
          </td>
          <td>
            <a href="http://localhost:3000/directors/<%= director.id %>/edit_form" class = "btn btn-warning">
              <i class = "fa fa-edit"></i>
            </a>
          </td>
          <td>
            <a href="http://localhost:3000/delete_director/<%= director.id %>" class = "btn btn-danger">
              <i class = "fa fa-trash-o"></i>
            </a>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
